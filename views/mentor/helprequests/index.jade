extends ../../layouts/standard

block content
	#help-request-page.clear.services.section.block
		.block.content-960.center-relative
			h2.section-title-fixed.singleLineText.margin-left-7 Help Requests
			.title-separator.margin-left-7
			
			table
				thead
					th Name
					th Location
					th Description
					th Actions
				tbody
					each req in helpReqs
						tr 
							td= req.get('name')
							td= req.get('location')
							td= req.get('description')
							td
								button(type="") Assign to me
		
