extend ../layout
block content
	.containerbody
		h1.singleLineText Sign In
		form.form-horizontal(name='signin', method='post', action='/signin_submit', role='form')
			.form-group
				label(for='email', class='col-lg-2 control-label', name='email') Email Address
				.col-lg-6
					input#email(type='text', class='form-control', name='email', placeholder='Email')
			.form-group
				label(for='password', class='col-lg-2 control-label', name='password') Password
				.col-lg-6
					input#password(type='password', class='form-control', name='password', placeholder='Password')
			.form-group
				div(class='col-lg-offset-2 col-lg-5 pull-right')
					button(type='submit', class='btn btn-primary') Sign in
					
					
	.footer-spacer