{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "public/*"
  ],
  "verbose": false,
  "quiet": true,
  "events": {
    "start": "coffee -o public/js -c public/coffee",
    "restart": "echo -e \"\\n\\033[0;32m*********************************************\\n\\033[1;34m'${FILENAME}' has been changed\\n\\033[0;32m************* RESTARTING NODE ***************\\n\\033[0m\""
  },
  "watch": [
    "app/*",
    "boot/*",
    "emails/*",
    "lib/*"
  ],
  "env": {
    "RUN_LEVEL": "DEV"
  },
  "ext": "js json jade coffee",
  "delay": "2"
}