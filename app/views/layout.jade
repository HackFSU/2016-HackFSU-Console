doctype html
html(lang='en')
	
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(name='description', content='HackFSU Web Console for admins')
		meta(name='author', content='Trevor Helms')

		link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300', rel='stylesheet', type='text/css')
		link(rel='stylesheet', href='/css/bootstrap.min.css')
		link(rel='stylesheet', href='/css/square-corners.css')
		link(rel='stylesheet', href='/css/navbar-fixed.css')
		link(rel='stylesheet', href='/css/fonts.css')
		link(rel='stylesheet', href='/css/sticky-footer.css')

		title HackFSU Console - #{title}
	body
		#wrap
			div(class='navbar navbar-inverse navbar-fixed-top', role='navigation')
				.container
					.navbar-header
						button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='#') HackFSU Console
					div(class='navbar-collapse collapse')
						
						ul(class='nav navbar-nav navbar-right')
							if session.signin == 1
								li
									a(href='/users/profile') Profile
								li
									a(href='/users/signout') Logout
									
								//- admin only options
								if session.isAdmin == true
									li.dropdown
										a.dropdown-toggle(href='#', data-toggle='dropdown') 
											| Admin Tools 
											b.caret
										ul.dropdown-menu
											li#data
												a(href='/admin/allusers') All Users
											li#updates
												a(href='/updates') Updates
											li#email
												a(href='/email') Emails
							else 
								li
									a(href='/users/signin') Login
								li 
									a(href='/register') Register
								li
									a(href='/users/signup') Sign Up
								
			block content
		.footer
			.container
				p(class="text-muted credit").
					&copy; 2014 Trevor Helms and Jared Bennett



		//- JavaScripts here so page loads plus rapidement
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
		script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
		script(src='/js/navbar-active.js')