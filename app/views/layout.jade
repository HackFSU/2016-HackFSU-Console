		block localCSS

		title HackFSU '15
	body
		#wrap
			div(class='navbar navbar-inverse navbar-fixed-top', role='navigation')
				.container
					.navbar-header
						button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='/')
							img(src='/img/logo-nav.png')
					div(class='navbar-collapse collapse')
						
						ul(class='nav navbar-nav navbar-right')
							if session.signin == 1
								li
									a(href='/user/profile') Profile
								li
									a(href='/user/signout') Sign out
									
								//- admin only options
								if session.isAdmin == true
									li.dropdown
										a.dropdown-toggle(href='#', data-toggle='dropdown') 
											| Admin Console
											b.caret
										ul.dropdown-menu
											li
												a(href='/admin') Home
											li
												a(href='/admin/updates') Updates
											li
												a(href='/admin/applications') Applications
											li
												a(href='/admin/users') Users
											li
												a(href='/admin/emails') Emails
							else 
								//- li
								//- 	a(href='/signin') Sign In
								li 
									a(href='/apply') Apply
								//- li
								//- 	a(href='/signup') Sign Up
								//- li
								//- 	a(href='/contact') Contact
								//- li
								//- 	a(href='/schedule') Schedule
			block flashMessages
				if messages
					.flashMessages
						if messages.error
							div(class="alert alert-danger alert-dismissible")
								button(type="button", class="close", data-dismiss="alert", aria-label="Close")
									span(aria-hidden="true") &times;
								| #{messages.error}
						if messages.info
							div(class="alert alert-info alert-dismissible")
								button(type="button", class="close", data-dismiss="alert", aria-label="Close")
									span(aria-hidden="true") &times;
								| #{messages.info}
						if messages.success
							div(class="alert alert-success alert-dismissible")
								button(type="button", class="close", data-dismiss="alert", aria-label="Close")
									span(aria-hidden="true") &times;
								| #{messages.success}
						if messages.warning
							div(class="alert alert-warning alert-dismissible")
								button(type="button", class="close", data-dismiss="alert", aria-label="Close")
									span(aria-hidden="true") &times;
								| #{messages.warning}
							
			block content
			
			.footer
				.containerfooter(align="center")
					.socials
						a(href='http://www.twitter.com/HackFSU')
							.icon-twitter 
						|   
						p(class="credit").
							&copy; 2015 HackFSU
						| 
						a(href='http://www.facebook.com/hackfsu') 
							.icon-facebook
						
					



