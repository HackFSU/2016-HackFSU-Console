extend ../_layouts/standard
block vars
	- title = 'Judge | Sign up'

block localJS
	script(src='/bower_components/jquery-form-validator/form-validator/jquery.form-validator.min.js')
	script(src='/js/views/judge/index.js')

block content
	.clear.services.section.block
		.block.content-960.center-relative
			h2.section-title-fixed.singleLineText.margin-left-7 Judge Sign up
			.title-separator.margin-left-7
			#confirmation(style='display: none;').margin-left-7.margin-right-15
					p 
						| Thanks for signing up! You can now login at 
						a(href='/login') hackfsu.com/login
						| .
				.clear
			#errors(style='display: none;')
				.three_fourth.margin-left-7
					#error-messages
				.one_fourth.last
				.clear
			form#signup(method='post' action='' autocomplete='off')
				.one
					#signup-blurb
						| TODO - Judge signup blurb
						
				.clear
				div#signup-form
					.one_fourth
						label(for='email') Email *
					.one_half
						input#email(type='text' name='email' placeholder='ada@lovelace.com' data-validation='email')
					.one_fourth.last
					.clear
					
					.one_fourth
						label(for='firstName') First Name *
					.one_half
						input#firstName(type='text' placeholder='Ada' name='firstName' data-validation='required')
					.one_fourth.last
					.clear
							
					.one_fourth
						label(for='lastName') Last Name *
					.one_half
						input#lastName(type='text' placeholder='Lovelace' name='lastName' data-validation='required')
					.one_fourth.last
					.clear
							
					.one_fourth
						label(for='password') Password *
					.one_half
						input#password(type='password' name='password' placeholder='Password' data-validation='length' data-validation-length='min8' data-validation-help="Must be 8 or more characters")
						.clear
					.one_fourth.last
					.clear
						
					.one_fourth
							label(for='passwordconfirm') Confirm Password *
					.one_half
							input#passwordconfirm(type='password' name='passwordconfirm' placeholder='Confirm password' data-validation='confirmation' data-validation-confirm='password')
					.one_fourth.last
					.clear
							
					.one_fourth
						label(for='shirtSize') Shirt Size *
					.one_half
						select#shirtSize(name='shirtSize' value='shirtSize' data-validation='required')
							option(selected='true' disabled='true') Pick your size
							each val, key in store.shirtSizes
								option(value='#{key}')= val
					.one_fourth.last
					.clear
						
					.one_fourth
						label(for='phone') Phone Number *
					.one_half
						input#phone(type='text' name='phone' placeholder='850-867-5309' data-validation='required')
					.one_fourth.last
					.clear
					
					.one_fourth
						label(for='github') GitHub Username
					.one_half
						input#github(type='text' name='github' placeholder='ada95' data-validation-help="Please enter JUST your username. Don't include the URL part!")
					.one_fourth.last
					.clear
					
					.one_fourth
						label(for='diet') Dietary restrictions?
					.one_half
						input#diet(type='text' name='diet' placeholder='Vegan, vegetarian, etc.')
					.one_fourth.last
					.clear
					
					.one_fourth
						label(for="mlhcoc") Code of Conduct *
					.one_half
						input#mlhcoc(type='checkbox' value='true' data-validation='required' name='mlhcoc')
						label(for='mlhcoc') I will abide by the <a target="_blank" href="http://static.mlh.io/docs/mlh-code-of-conduct.pdf">MLH Code of Conduct</a> for the duration of the event.
					.one_fourth.last
					.clear
					
					.one_fourth
						label(for='waiver') Waiver *
					.one_half
							input#waiver(type='text' placeholder="Please sign your name" data-validation='required' name='waiverSignature')
							.help-block By signing your name above, on this day of <span style="text-decoration: underline">#{date}</span>, you hereby agree to the terms of our 
								a(href="/docs/release-of-liability.pdf" target="_blank") Release of Liability 
								| waiver.
					.one_fourth.last
					.clear

					.one_fourth
					.one_half
						button#submit.btn.btn-form(type='submit') SUBMIT
					.one_fourth.last
					.clear
