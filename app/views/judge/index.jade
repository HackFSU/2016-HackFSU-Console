extends ../_layouts/standard.jade

block localJS
	script(src='/js/nouislider.min.js' type='text/javascript')
	script(src='/js/judging.js' type='text/javascript')

block localCSS
	link(rel="stylesheet" href="/assets/css/nouislider.css")
	link(rel="stylesheet" href="/assets/css/judge.css")

//judge screen 1
block content
	#judge1.clear.services.section.block
		.block.content-960.center-relative
				#judgemain
					.hellojudge.happy.section-title-fixed.singleLineText <img id='titlePiece' src='/assets/img/titlepieces1.png' style='z-index:-1;' />HAPPY 
					br
					br
					.hellojudge.judging.section-title-fixed.singleLineText JUDGING 
					br
					br
					br
					.hellojudge.p BELOW IS A LIST OF HACKS THAT YOU WILL BE JUDGING:
						br
						br
						p Project #
						p Project #
						p Project #
					button#beginjudge.judge-btn.judge-btn-form(type='submit') LET'S BEGIN >>
				
				//screen 2
				#judge2
					h2.section-title Total Points: #[span#judgingpoints 3]
					.title-separator
					.one_third
						.hero.judgehack1 Hack #[span.judgehack2 #1]
					.two_third.last
						#jslider1
					br
					br
					br
					.one_third
						.hero.judgehack1 Hack #[span.judgehack2 #2]
					.two_third.last
						#jslider2
					br
					br
					br
					.one_third
						.hero.judgehack1 Hack #[span.judgehack2 #3]
					.two_third.last
						#jslider3
					.clear
					br
					br
					br
					.hero.judgehack1 Categories
					br
					form#judgeform(name='judgeform' method='post' action='' autocomplete='off')
						.judgehack2 Best New-Comer Team #[span.judgehack1 (required)]
						select(name='newcomer')
							option(value='1') 1
							option(value='2') 2
							option(value='3') 3
						br
						br
						.judgehack2 Best Veteran Team #[span.judgehack1 (required)]
						select(name='veteran')
							option(value='1') 1
							option(value='2') 2
							option(value='3') 3
						br
						br
						.judgehack2 Most Ridiculous
						select(name='ridiculous')
							option(value='1') 1
							option(value='2') 2
							option(value='3') 3
						br
						br
						.judgehack2 Design
						select(name='design')
							option(value='1') 1
							option(value='2') 2
							option(value='3') 3
						br
						br
						.judgehack2 Hardware
						select(name='hardware')
							option(value='1') 1
							option(value='2') 2
							option(value='3') 3
						br
						br
						.judgehack2 Mobile
						select(name='mobile')
							option(value='1') 1
							option(value='2') 2
							option(value='3') 3
						br
						br
						button#judgesave.btn.btn-form(type='submit') SAVE
					button#judgerefresh.btn.btn-form REFRESH