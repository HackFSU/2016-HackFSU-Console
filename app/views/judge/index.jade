extend ../_layouts/user
block vars
	- title = 'Judge'

block localJS
	script(src='/js/nouislider.min.js' type='text/javascript')
	script(src='/js/judging.js' type='text/javascript')

block localCSS
	link(rel="stylesheet" href="/assets/css/nouislider.css")
	link(rel="stylesheet" href="/assets/css/judge.css")

//judge screen 1
block content
	#judge1.clear.services.section.block
		.block.content-960.center-relative
			if !hacks || hacks.length === 0
				b.p You have not been assigned hacks. Go to the judge organizer table to get another round of hacks.
			else
				#judgemain
					.hellojudge.happy.section-title-fixed.singleLineText <img id='titlePiece' src='/assets/img/titlepieces1.png' style='z-index:-1; padding-left:.1em;' />HAPPY 
					br
					br
					.hellojudge.judging.section-title-fixed.singleLineText JUDGING 
					br
					br
					.plist BELOW IS A LIST OF HACKS THAT YOU WILL BE JUDGING:
					
					for hack in hacks
						.p #{hack.tableNumber} #{hack.name}
						
				
					br
					button#beginjudge.judge-btn.judge-btn-form(type='submit') LET'S BEGIN
					br
				//screen 2
				#judge2
					br
					br
					h2.judges Total Points: #[span#judgingpoints 3]
					.title-separator
					br
					
					for hack in hacks
						.one_third
							.hero.judgehack1 Hack #[span.judgehack2 #1]
						.two_third.last
							.hack-jslider(data-hack-id='#{hack.objectId}')
						br
						br
						br
						
				
					.hero.judgehack1.categoryTitle Categories
					br
					br
					.judgehack2.categories Best New-Comer Team
					select.optionheight
						option None Selected
						for hack in hacks
							option(value='#{hack.objectId}') #{hack.name}
							
					br
					br
					.judgehack2.categories Best Veteran Team
					select.optionheight
						option None Selected
						for hack in hacks
							option(value='#{hack.objectId}') #{hack.name}
					br
					br
					.judgehack2.categories Best Collaborative Team
					select.optionheight
						option None Selected
						for hack in hacks
							option(value='#{hack.objectId}') #{hack.name}
					br
					br
					.judgehack2.categories Most Ridiculous
					select.optionheight
						option None Selected
						for hack in hacks
							option(value='#{hack.objectId}') #{hack.name}
					br
					br
					.judgehack2.categories Best Design
					select.optionheight
						option None Selected
						for hack in hacks
							option(value='#{hack.objectId}') #{hack.name}
					br
					br
					.judgehack2.categories Best Hardware
					select.optionheight
						option None Selected
						for hack in hacks
							option(value='#{hack.objectId}') #{hack.name}
					br
					br
					
					.judgehack2.categories Best Mobile
					select.optionheight
						option None Selected
						for hack in hacks
							option(value='#{hack.objectId}') #{hack.name}
							
					br
					br
					button#endjudge.judge-btn.judge-btn-form(type='submit') SAVE

				//screen 3
				#judge3.clear.services.thankyousection.block
					.block.content-960.center-relative
								.hellojudge.judging.section-title-fixed.singleLineText <img id='titlePiece' src='/assets/img/titlepieces1.png' style='z-index:-1;' /> THANK YOU! 
								br
								br
								.hellojudge.p.nextround The next round will begin in a few minutes. Sit tight  :D
								br
								button#judgerefresh.judge-btn.judge-btn-form REFRESH
