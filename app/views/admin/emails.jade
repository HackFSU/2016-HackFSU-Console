extend ../layout
block content
	.containerbody
		h1.singleLineText Email Management
	.container
		table.table
			thread
				tr
					th Email Template
					th Description
					th Actions
			tbody
				tr
					td applyConfirm
					td Application submission confirmation
					td (auto)
				tr
					td registrationSubscribe
					td Preview subscription email, saying registration is open
					td 
						button.btn.btn-large#registrationSubscribe(disabled) Send!
				tr
					td spreadTheWord
					td Spread the word about HackFSU email to all known emails
					td 
						button.btn.btn-large#spreadTheWord(disabled) Send!
	
				tr
					td csBlast
					td CS email blast to Jared to send out
					td
						button.btn.btn-large#csBlast(disabled) Send!
				
				tr
					td confirmWarning
					td Sends a 'Last day to confirm' email to all who are accepted
					td
						button.btn.btn-large#confirmWarning(disabled) Send!
				tr
					td confirmWarning2
					td Sends a warning email to confirm ASAP to all who are accepted
					td
						button.btn.btn-large#confirmWarning2(disabled) Send!
	
	
	.footer-spacer

block localJavascript
	script(src='/js/admin/admin-emails.js')
		