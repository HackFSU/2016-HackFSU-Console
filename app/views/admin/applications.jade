extend ../layout
block content
	.containerbody
		h1.singleLineText Application Managment
		
		#tabs(role='tabpanel')
			//- Nav tabs
			ul.nav.nav-tabs(roles='tablist')
				li.active(role='presentation')
					a(href='#schools', aria-controls='schools', role='tab' data-toggle='tab') Schools
				li(role='presentation')
					a(href='#all', aria-controls='all', role='tab' data-toggle='tab') All Applications
			
			//- Tab panes
			.tab-content#tabContainer
				.tap-pane.active#schools(role='tabpanel')
					//- | SCHOOL SUMMARY (Jared)
					table.table.table-striped
						thead
							tr
								th School
								th Email
								th Count
						tbody
							for school in schools
								tr
									//- all matching school names
									td
										for name in school.names
											| #{name}; 
									//- all matching email extensions
									td 
										for email in school.emails
											| #{email}; 
									//- count of all for the school
									td #{school.count}
						tfoot
							tr
								th School
								th Count
				
				.tap-pane#all(role='tabpanel')
					//- | ALL APPS (Michelle)
					table.table.table-striped
						thead
							tr
								th School
								th Email
						tbody
							for app in apps
								tr
									td #{app.school}
									td #{app.email}
						tfoot
							tr
								th School
								th Email
						
			
		
block localCSS
	ink(rel='stylesheet', href='/css/admin/admin-applications.css')
	
block localJavascript
	script(src='/js/admin/admin-applications.js')