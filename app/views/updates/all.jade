extend ../layout
block content
	.container
		div(class='panel panel-default')
			div.panel-heading
				h3.panel-title
					= title
					span.pull-right
						= 'Total: ' + count
			table(class='table table-striped table-hover')
				thead
					tr
						th Title
						th Message
						th Time
				tbody
					each update in updates
						tr
							td= update.title
							td= update.msg
							td(style='min-width: 7em')= timeAgo(update.createdAt)
