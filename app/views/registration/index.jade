extend ../_layouts/standard
block localJS
	script(src='/bower_components/jquery-form-validator/form-validator/jquery.form-validator.min.js')
	script(src='/js/views/register.js')
		
block content
	#register.clear.services.section.block
		.block.content-960.center-relative
			h2.section-title-fixed.singleLineText.margin-left-15 Registration
			.title-separator.margin-left-15
			#confirmation(style='display: none;').margin-left-15.margin-right-15
					h2 Thanks!
					p 
						| Your registration has been submitted and you should receive a confirmation email
						| soon! Don't forget to check out the <a href="/">rest of our site</a> if you
						| haven't already. 
						br
						| It features a new video on the Florida Hacking Culture, an 
						| FAQ section if you have any questions, and travel information for those of you
						| heading to Tallahassee from another school.
						br
					p.strong See you next Spring!
				.clear
			#errors(style='display: none;')
				.three_fourth.margin-left-15
					#error-messages
				.one_fourth.last
				.clear
			form#application(method='post' action='' autocomplete='off')
				div#application-form
					.one_fourth
						label(for='email') Email *
					.one_half
						input#email(type='text' name='email' placeholder='Whats your .edu' data-validation='email')
					.one_fourth.last
					.clear
					
					.one_fourth
						label(for='firstName') First Name *
					.one_half
						input#firstName(type='text' placeholder='What do your homies call you' name='firstName' data-validation='required')
					.one_fourth.last
					.clear
							
					.one_fourth
						label(for='lastName') Last Name *
					.one_half
						input#lastName(type='text' placeholder='Whats the fam go by' name='lastName' data-validation='required')
					.one_fourth.last
					.clear
							
					.one_fourth
						label(for='password') Password *
					.one_half
						input#password(type='password' name='password' placeholder='Password' data-validation='length' data-validation-length='min8' data-validation-help="Must be 8 or more characters")
						.clear
					.one_fourth.last
					.clear
						
					.one_fourth
							label(for='passwordconfirm') Confirm Password *
					.one_half
							input#passwordconfirm(type='password' name='passwordconfirm' placeholder='Confirm password' data-validation='confirmation' data-validation-confirm='password')
					.one_fourth.last
					.clear
							
					.one_fourth
						label(for='school') School *
					.one_half
						input#school(type='text' name='school' placeholder='Florida State University' list='school-list' data-validation='required')
						datalist#school-list
							each school in store.schools
								option= school
					.one_fourth.last
					.clear
							
					.one_fourth
						label(for='year') Current Year *
					.one_half
						select#year(name='year' value='year' data-validation='required')
							option(selected='true' disabled='true') Pick a year
							option(value='Freshman') Freshman
							option(value='Sophomore') Sophomore
							option(value='Junior') Junior
							option(value='Senior') Senior
							option(value='Graduate Student') Graduate Student
							option(value='High School Student') High School Student
					.one_fourth.last
					.clear

					.one_fourth
						label(for='shirtSize') Shirt Size *
					.one_half
						select#shirtSize(name='shirtSize' value='shirtSize' data-validation='required')
							option(selected='true' disabled='true') Pick a size
							each val, key in store.shirtSizes
								option(value='#{key}')= val
					.one_fourth.last
					.clear
						
					.one_fourth
						label(for='major') Major *
					.one_half
						input#major(type='text' name='major' placeholder="What books you readin'" data-validation='required' list='majors-list')
						datalist#majors-list
							each major in store.majors
								option= major
								
					.one_fourth.last
					.clear
						
					.one_fourth
						label(for='firstHackathon') Will this be your first hackathon? *
					.one_half
						input#hackYes(type='radio' name='firstHackathon' value='true' data-validation='required')
						label(for='hackYes') Yes
						input#hackNo(type='radio' name='firstHackathon' value='false')
						label(for='hackNo') No
					.one_fourth.last
					.clear

					.one_fourth
						label(for='github') GitHub Username
					.one_half
						input#github(type='text' name='github' placeholder='Bet you have some mad PRs' data-validation-help="Please enter JUST your username. Don't include the URL part!")
					.one_fourth.last
					.clear
						
					.one_fourth
						label(for='resume') Resume
					.one_half
						input#resume(type='file' name='resume' data-validation='mime size' data-validation-allowing='pdf' data-validation-max-size='2M')
						textarea#resumeBase64(name='resumeBase64' style='display: none;')
						.help-block File size must be less than 2mb and in PDF format.
					.one_fourth.last
					.clear

					.one_fourth
						label(for='wantjob') Looking for a job?
					.one_half
						input#fulltime(type='checkbox' name='wantjob' value='fulltime')
						label(for='fulltime') Full-time
						input#parttime(type='checkbox' name='wantjob' value='parttime')
						label(for='parttime') Part-time
						input#internship(type='checkbox' name='wantjob' value='internship')
						label(for='internship') Internship
					.one_fourth.last
					.clear 
						
						
					.one_fourth
						label(for='phone') Phone Number
					.one_half
						input#phone(type='text' name='phone' placeholder='Phone #')
					.one_fourth.last
					.clear
					
					.one_fourth
						label(for='hate') What is one thing you hate about hackathons?
					.one_half
						textarea#hate(rows='4' name='hate')
					.one_fourth.last
					.clear
					
					.one_fourth
						label(for='diet') Dietary restrictions?
					.one_half
						input#diet(type='text' name='diet' placeholder='Vegan, vegetarian, etc.')
					.one_fourth.last
					.clear

					.one_fourth
						label(for='comments') Comments?
					.one_half
						input#comments(type='text' name='comments' placeholder="We're all ears!")
					.one_fourth.last
					.clear

					.one_fourth
						label(for='wants') What do you want to learn or hack on for the weekend?
					.one_half
						input#ios(type='checkbox' value='iOS' name='wants')
						label(for='ios') iOS
						br
						input#android(type='checkbox' value='Android' name='wants')
						label(for='android') Android
						br
						input#web(type='checkbox' value='Web' name='wants')
						label(for='web') Web
						br
						input#front(type='checkbox' value='Front End' name='wants')
						label(for='front') Front End
						br
						input#back(type='checkbox' value='Back End' name='wants')
						label(for='back') Back End
						br
						input#shelf(type='checkbox' value='off the shelf hardware' name='wants')
						label(for='shelf') 'Off The Shelf' Hardware: Myo, Oculus Rift, Leap Motion, etc.
						br
						input#micro(type='checkbox' value='microcontroller' name='wants')
						label(for='micro') Microcontrollers: Arduino, Raspberry Pi, etc.
						br
						input#sleep(type='checkbox' disabled='true')
						label(for='sleep') Sleep
					.one_fourth.last
					.clear
					
					.one_fourth
						label(for='gender') Gender
					.one_half
						select#gender(name='gender')
							option(selected='true' disabled='true') Select your gender
							each val, key in store.anonStats.gender
								option(value='#{key}')= val
						.help-block Answering this optional field is anonymous and will not be associated with your account.
					.one_fourth.last
					.clear
						
					.one_fourth
						label(for='ethnicity') Ethnicity
					.one_half
						select#ethnicity(name='ethnicity')
							option(selected='true' disabled='true') Select your ethnicity
							each val, key in store.anonStats.ethnicity
								option(value='#{key}')= val
						.help-block Answering this optional field is anonymous and will not be associated with your account.
					.one_fourth.last
					.clear 
							
					.one_fourth
						label(for='yesno18') Are you 18 or not? *
					.one_half
						input#yes18(type='radio' value='true' data-validation='required' name='yesno18') 
						label(for='yes18') I'm 18 or over
						input#no18(type='radio' value='false' data-validation='' name='yesno18') 
						label(for='no18') I'm under 18
					.one_fourth.last
					.clear
					
					.one_fourth
						label(for="mlhcoc") Code of Conduct *
					.one_half
						input#mlh(type='checkbox' value='true' data-validation='required' name='mlhcoc')
						label(for='mlh') I will abide by the <a target="_blank" href="http://static.mlh.io/docs/mlh-code-of-conduct.pdf">MLH Code of Conduct</a> for the duration of the event.
					.one_fourth.last
					.clear
				
					.one_fourth
					.one_half
						button#submit.btn.btn-form(type='submit') SUBMIT
					.one_fourth.last
					.clear
