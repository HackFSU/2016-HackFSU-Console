//- 
	bootstrap layout base

block vars
	//- title

include _logo
doctype html
html(lang='en')
	head
		include _meta
		
		title= 'HackFSU' + (title ? ' | ' + title : '')
		
		//- CSS
		link(rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Montserrat:400,700')
		link(rel='stylesheet' type='text/css' href='/assets/fonts/font-awesome/css/font-awesome.min.css')
		link(rel='stylesheet' type='text/css' href='/bower_components/bootstrap/dist/css/bootstrap.css')
		link(rel='stylesheet' type='text/css' href='/assets/css/custom.css')
		link(rel='stylesheet' type='type/css' href='/assets/css/admin-bootstrap.css')
		
		block layoutCSS
		block localCSS

	body

		block header
			.navbar.navbar-default
				.container-fluid
					.navbar-header
						button.navbar-toggle.collapsed(data-toggle='collapse' data-target='#navbar-target' aria-expanded='false')
							.icon-bar
							.icon-bar
							.icon-bar
						.navbar-brand
							a(href='/')
								img#logo(src='/assets/img/white_feather.png')
								| HackFSU
					
					#navbar-target-target.navbar-collapse
						ul.nav.navbar-nav.navbar-rights
							li.dropdown
								a.dropdown-toggle(data-toggle='dropdown' role='button' aria-expanded='false')
									| About 
									.caret
								ul.dropdown-menu
									li: a(href='/#faq') FAQ
									li: a(href='/#travel') TRAVEL
									li: a(href='/#sponsors') SPONSORS
							
							if session && session.user
								li: a(href='/register') REGISTER
								li: a(href='/user/login') LOG IN
							else
								li: a(href='/user/profile') PROFILE
							
								if acl && acl.canAccess.Mentor
									li: a(href='/mentor/helprequests') HELP REQUESTS
								
								if acl && acl.canAccess.Admin
									li.dropdown
										a.dropdown-toggle(data-toggle='dropdown' role='button' aria-expanded='false')
											| Admin
											.caret
										ul.dropdown-menu
											li: a(href='/admin/hackers') Hackers
											li: a(href='/admin/schools') Schools
											li: a(href='/admin/checkin') Check in
												
								li: a(href='/user/logout') LOG OUT
		#content.container-fluid
			block content
				// replace this block for page
		
		
		block footer
			.text-center.footer
				.footer-content
					.social.center-text
						a(href='#{store.links.twitter}' style='text-decoration:none;')
							i.fa.fa-twitter
						a(href='#{store.links.facebook}' style='text-decoration:none;')
							i.fa.fa-facebook
						a(href='#{store.links.instagram}' style='text-decoration:none;')
							i.last.fa.fa-instagram
					.footer-copyright.center-text
						= store.app.copyright


		// Google Analytics
		script(type='text/javascript').
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			ga('create', 'UA-59773856-1', 'auto');
			ga('send', 'pageview');
		
		script(src='/bower_components/jquery/dist/jquery.min.js')
		script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
		script(src='/js/main.js')
		
		block layoutJS
		block localJS
		
